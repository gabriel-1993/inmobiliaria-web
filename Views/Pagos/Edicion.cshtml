@model InmobiliariaVargasHuancaTorrez.Models.Pago

@{
    ViewData["Title"] = "Pagos";
}

<div class="row mt-4 d-flex justify-content-center">
    <div class="col-md-5">
        <h2 class="text-center">Editar pago</h2>
        <hr />

        <form asp-action="Guardar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Id" value="@Model.Id" />

            <input type="hidden" name="Id_Contrato" value="@Model.Id_Contrato" />

            <div class="form-group mb-3">
                <label asp-for="NumeroPago" class="control-label"></label>
                <input asp-for="NumeroPago" class="form-control" readonly />
                <span asp-validation-for="NumeroPago" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaPago" class="control-label"></label>
                <input type="date" name="FechaPago" class="form-control" value="@Model.FechaPago.ToString("yyyy-MM-dd")"
                    readonly />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Detalle" class="control-label"></label>
                <input asp-for="Detalle" class="form-control" />
                <span asp-validation-for="Detalle" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" readonly />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 d-grid gap-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a href="/Pagos/Index/@Model.Id_Contrato" class="btn btn-outline-primary">Volver</a>
            </div>

        </form>
    </div>