@model InmobiliariaVargasHuancaTorrez.Models.TipoInmueble
@{
    ViewData["Title"] = "Tipos de Inmueble";
}

<div class="row my-4 d-flex justify-content-center">
    <div class="col-md-5">
        @if (@Model.Id == 0)
        {
            <h2 class="text-center">Crear Tipo</h2>
        }
        else
        {
            <h2 class="text-center">Editar Tipo</h2>
        }
        <hr/>

        <form asp-action="Guardar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Id" value="@Model.Id">

            <div class="form-group mb-4">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control">
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 d-grid gap-3">
                <input type="submit" value="Guardar" class="btn btn-primary">
                <a asp-action="Index" class="btn btn-outline-primary">Volver</a>
            </div>
        </form>
    </div>
</div>