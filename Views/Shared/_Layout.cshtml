<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/img/favicon.svg" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InmobiliariaVargasHuancaTorrez.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.bootstrap5.min.css">
</head>
<body>
    @if (User?.Identity != null && User.Identity.IsAuthenticated)
    {
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark box-shadow py-3" style="background-color: #031633;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-buildings"></i></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarNav">
                    
                    <ul class="navbar-nav flex-grow-1">

                        @if(User.IsInRole("Administrador")){
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                        </li> 
                        }

                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Propietarios" asp-action="Index">Propietarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Inquilinos" asp-action="Index">Inquilinos</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link active dropdown-toggle" asp-area="" asp-controller="Inmuebles" asp-action="Index">Inmuebles</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="TipoInmueble" asp-action="Index">Tipos de Inmueble</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Contratos" asp-action="Index">Contratos</a>
                        </li>   
                    </ul>
                    <div>
                        <a class="btn btn-sm btn-outline-light fix-color" asp-area="" asp-controller="Usuarios" asp-action="Perfil"><i class="bi bi-person-circle"></i> Mi Perfil</a>
                        <a class="btn btn-sm btn-outline-light" asp-area="" asp-controller="Usuarios" asp-action="Salir"><i class="bi bi-box-arrow-right"></i> Salir</a>
                    </div> 
                </div>
            </div>
        </nav>
    </header>
    }

    <div class="container">
        <main role="main" class="">
            @if (ViewBag.Mensaje != null)
			{//cartel general
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    <strong>Información:</strong> @ViewBag.Mensaje
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
			}
            @RenderBody()
        </main>
    </div>

    @if (User?.Identity != null && User.Identity.IsAuthenticated)
    {
    <footer class="text-white py-4 d" style="background-color: #031633">
        <div class="container d-flex justify-content-between">
            <div>
                &copy; 2024 - Inmobiliaria Web
            </div>
            <div>
                <a class="btn btn-sm btn-outline-light fix-color" href="https://github.com/gabriel-1993/inmobiliaria-web" target="_blank"><i class="bi bi-github"></i></a>
            </div>
        </div>
    </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap5.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
